{
  "manifest_version": 2,
  "name": "Screen Capture Extension",
  "version": "1.0",
  "description": "Extension for capturing screenshots",
  "permissions": ["activeTab", "scripting", "notifications", "storage"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
